{
  "name": "api",
  "version": "6.1.3",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "prebuild": "pnpm db:gen",
    "build": "vite build --app",
    "predev": "pnpm db:gen",
    "dev": "vite dev",
    "preview": "vite preview",
    "db:gen": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:drop": "rm -rf ../../.wrangler ./.wrangler",
    "db:reset": "pnpm db:drop && pnpm db:mig:local && pnpm db:gen && pnpm db:seed && ln -s ../../.wrangler .wrangler",
    "db:mig:init": "prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/0001_initialize.sql",
    "db:mig:create": "prisma migrate diff --from-local-d1 --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/XXXX_new_migration.sql",
    "db:mig:local": "CI=true wrangler d1 migrations apply demo-db --local --persist-to=\"../../.wrangler/state\"",
    "db:mig:stg": "CI=true wrangler d1 migrations apply demo-db --remote --env staging",
    "db:mig:prod": "CI=true wrangler d1 migrations apply demo-db --remote --env production",
    "test": "vitest",
    "typegen": "wrangler types --include-runtime=false",
    "format": "prettier --write --log-level=\"silent\" \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.1.0",
    "@cloudflare/vitest-pool-workers": "^0.8.24",
    "@cloudflare/workers-types": "^4.20250504.0",
    "@prisma/adapter-d1": "^6.7.0",
    "@prisma/client": "^6.7.0",
    "@types/node": "^22.15.3",
    "dotenv": "^16.5.0",
    "prisma": "^6.7.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vitest": "3.1.2",
    "wrangler": "^4.14.1"
  }
}
