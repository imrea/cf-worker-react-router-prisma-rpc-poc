{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["*.d.ts", "**/.react-router/**", "**/prisma/client/**"],
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "warn"
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noUnknownFunction": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useConst": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "css": {
    "linter": {
      "enabled": false
    }
  }
}
